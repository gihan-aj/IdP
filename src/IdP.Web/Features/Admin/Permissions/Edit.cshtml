@page "/admin/permissions/edit/{id}"
@model IdP.Web.Features.Admin.Permissions.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Permission";
}

<div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center border-b border-gray-200 pb-4 mb-4">
        <h2 class="text-2xl font-bold text-gray-800">Edit Permission</h2>
        <a href="/admin/permissions" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
            &larr; Back to List
        </a>
    </div>

    <form method="post" class="space-y-6">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>
        <input type="hidden" asp-for="Input.Id" />

        <!-- Service -->
        <div>
            <label asp-for="Input.ServiceId" class="block text-sm font-medium text-gray-700">Service (Resource)</label>
            <select asp-for="Input.ServiceId" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md border">
                @foreach (var service in Model.AvailableServices)
                {
                    <option value="@service">@service</option>
                }
            </select>
        </div>

        <!-- Name -->
        <div>
            <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700">Friendly Name</label>
            <input asp-for="Input.Name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" />
        </div>

        <!-- Value -->
        <div>
            <label asp-for="Input.Value" class="block text-sm font-medium text-gray-700">Permission Value (Claim)</label>
            <input asp-for="Input.Value" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border bg-gray-50" />
            <p class="text-xs text-gray-500 mt-1">
                <strong>Note:</strong> If you change this value, the system will automatically update all Roles currently using the old permission string. Ensure your Client APIs are updated to check for this new value.
            </p>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="Input.Description" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border"></textarea>
        </div>

        <div class="flex justify-end pt-4">
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md shadow-sm text-sm font-medium hover:bg-indigo-700">
                Save Changes
            </button>
        </div>
    </form>
</div>
