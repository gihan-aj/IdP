@page "/admin/permissions/create"
@model IdP.Web.Features.Admin.Permissions.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Permission";
}

<div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start border-b border-gray-200 pb-4 mb-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Add New Permission</h2>
            <p class="text-gray-600 text-sm">Register a permission string that can be assigned to Roles.</p>
        </div>
        <a href="/admin/permissions" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium flex items-center">
            &larr; Back to List
        </a>
    </div>

    <form method="post" class="space-y-6">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <!-- Service Selection -->
        <div>
            <label asp-for="Input.ServiceId" class="block text-sm font-medium text-gray-700">Service (Resource)</label>
            <select asp-for="Input.ServiceId" id="serviceSelect" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md border">
                <option value="">-- Select a Resource --</option>
                @foreach (var service in Model.AvailableServices)
                {
                    <option value="@service">@service</option>
                }
            </select>
            <p class="text-xs text-gray-500 mt-1">Select the API Scope this permission belongs to.</p>
        </div>

        <!-- Name -->
        <div>
            <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700">Friendly Name</label>
            <input asp-for="Input.Name" id="friendlyName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="e.g. Create Products" />
        </div>

        <!-- Value (Auto-Generated) -->
        <div>
            <label asp-for="Input.Value" class="block text-sm font-medium text-gray-700">Permission Value (Claim)</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input asp-for="Input.Value" id="permValue" class="flex-1 min-w-0 block w-full px-3 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm font-mono text-gray-700 bg-gray-50" placeholder="e.g. ims:products:create" />
            </div>
            <p class="text-xs text-gray-500 mt-1">
                The actual string checked by the API `[Authorize(Policy="...")]`.
            </p>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="Input.Description" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="Allows creating new product entries in the catalog."></textarea>
        </div>

        <div class="flex justify-end pt-4">
            <a href="/admin/permissions" class="bg-white text-gray-700 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium hover:bg-gray-50 mr-3">Cancel</a>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md shadow-sm text-sm font-medium hover:bg-indigo-700">
                Save Permission
            </button>
        </div>
    </form>
</div>

<!-- Simple Script to Auto-Generate the Permission Value -->
<script>
    const serviceSelect = document.getElementById('serviceSelect');
    const friendlyName = document.getElementById('friendlyName');
    const permValue = document.getElementById('permValue');

    function updateValue() {
        const service = serviceSelect.value.replace('_resource_server', ''); // clean up suffix
        const name = friendlyName.value.toLowerCase().replace(/[^a-z0-9]/g, ':'); // slugify

        if (service && name) {
            permValue.value = `${service}:${name}`;
        }
    }

    serviceSelect.addEventListener('change', updateValue);
    friendlyName.addEventListener('input', updateValue);
</script>
