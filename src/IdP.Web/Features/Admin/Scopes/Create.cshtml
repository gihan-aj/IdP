@page "/admin/scopes/create"
@model IdP.Web.Features.Admin.Scopes.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Scope";
}

<div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start border-b border-gray-200 pb-4 mb-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Define New API Scope</h2>
            <p class="text-gray-600 text-sm">Register a new Resource Server (API) that clients can access.</p>
        </div>
        <a href="/admin/scopes" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium flex items-center">
            &larr; Back to List
        </a>
    </div>

    <form method="post" class="space-y-6">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <div>
            <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700">Service Prefix / Name</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input asp-for="Input.Name" class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-l-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="e.g. finance" />
                <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                    _resource_server
                </span>
            </div>
            <p class="text-xs text-gray-500 mt-1">
                This will create the scope: <strong>&lt;name&gt;_resource_server</strong>. Used to group permissions (e.g. <code>finance:invoices:read</code>).
            </p>
        </div>

        <div>
            <label asp-for="Input.DisplayName" class="block text-sm font-medium text-gray-700">Display Name</label>
            <input asp-for="Input.DisplayName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="e.g. Finance API" />
        </div>

        <div>
            <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700">Consent Description</label>
            <textarea asp-for="Input.Description" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="Access financial records and invoice data."></textarea>
            <p class="text-xs text-gray-500 mt-1">This text is shown to the user on the Consent Screen.</p>
        </div>

        <div>
            <label asp-for="Input.ResourceId" class="block text-sm font-medium text-gray-700">Audience ID</label>
            <input asp-for="Input.ResourceId" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="e.g. finance_backend_api" />
            <p class="text-xs text-gray-500 mt-1">
                The token <code>aud</code> claim will contain this value. Your API must validate against it.
            </p>
        </div>

        <div class="flex justify-end pt-4">
            <a href="/admin/scopes" class="bg-white text-gray-700 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium hover:bg-gray-50 mr-3">Cancel</a>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md shadow-sm text-sm font-medium hover:bg-indigo-700">
                Create Scope
            </button>
        </div>
    </form>
</div>
