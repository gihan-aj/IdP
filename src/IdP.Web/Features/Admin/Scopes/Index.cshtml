@page "/admin/scopes"
@model IdP.Web.Features.Admin.Scopes.IndexModel
@{
	ViewData["Title"] = "Scope Management";
}

<div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800">API Scopes</h2>
        <a href="/admin/scopes/create" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm font-medium">
            Create New Scope
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full leading-normal">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Internal Name
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Display Name
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var scope in Model.Scopes)
                {
                    <tr>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm font-mono text-indigo-600">
                            @scope.Name
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            @scope.DisplayName
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-gray-500">
                            @scope.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
