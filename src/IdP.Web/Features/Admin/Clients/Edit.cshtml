@page "/admin/clients/edit/{id}"
@model IdP.Web.Features.Admin.Clients.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Client";
}

<div class="max-w-3xl mx-auto bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center border-b border-gray-200 pb-4 mb-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Edit Client</h2>
            <p class="text-gray-600 text-sm">Update configuration for @Model.Input.ClientId</p>
        </div>
        <a href="/admin/clients" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
            &larr; Back to List
        </a>
    </div>

    <form method="post" class="space-y-6">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>
        <input type="hidden" asp-for="Input.Id" />

        <!-- Identity -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">Client ID</label>
                <!-- Client ID is usually immutable in OIDC to preserve relationships -->
                <input asp-for="Input.ClientId" disabled class="mt-1 block w-full bg-gray-100 border-gray-300 rounded-md shadow-sm sm:text-sm px-3 py-2 border cursor-not-allowed" />
            </div>
            <div>
                <label asp-for="Input.DisplayName" class="block text-sm font-medium text-gray-700">Display Name</label>
                <input asp-for="Input.DisplayName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" />
            </div>
        </div>

        <div>
            <label asp-for="Input.ClientSecret" class="block text-sm font-medium text-gray-700">Change Client Secret</label>
            <input asp-for="Input.ClientSecret" type="password" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border" placeholder="Leave empty to keep current secret" />
        </div>

        <!-- Flows -->
        <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Allowed Flows</h3>
            <div class="space-y-2">
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input asp-for="Input.FlowAuthCode" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" />
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Input.FlowAuthCode" class="font-medium text-gray-700">Interactive Login (Authorization Code)</label>
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input asp-for="Input.FlowClientCredentials" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" />
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Input.FlowClientCredentials" class="font-medium text-gray-700">Machine-to-Machine (Client Credentials)</label>
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input asp-for="Input.FlowRefreshToken" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" />
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Input.FlowRefreshToken" class="font-medium text-gray-700">Allow Refresh Tokens</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Access -->
        <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
            <h3 class="text-sm font-medium text-gray-900 mb-3">API Access</h3>
            @if (Model.AvailableResourceScopes.Any())
            {
                <div class="grid grid-cols-2 gap-4">
                    @foreach (var scope in Model.AvailableResourceScopes)
                    {
                        <div class="flex items-center">
                            <input type="checkbox" name="Input.SelectedScopes" value="@scope"
                                   id="scope_@scope"
                                   class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                                   @(Model.Input.SelectedScopes.Contains(scope) ? "checked" : "") />
                            <label for="scope_@scope" class="ml-2 block text-sm text-gray-900 select-none">
                                @scope
                            </label>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-sm text-gray-500 italic">No custom resource scopes found.</p>
            }
        </div>

        <!-- URLs -->
        <div>
            <label asp-for="Input.RedirectUris" class="block text-sm font-medium text-gray-700">Redirect URIs</label>
            <textarea asp-for="Input.RedirectUris" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border"></textarea>
        </div>
        <div>
            <label asp-for="Input.PostLogoutUris" class="block text-sm font-medium text-gray-700">Post-Logout URIs</label>
            <textarea asp-for="Input.PostLogoutUris" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-3 py-2 border"></textarea>
        </div>

        <div class="flex justify-end pt-4">
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md shadow-sm text-sm font-medium hover:bg-indigo-700">
                Save Changes
            </button>
        </div>
    </form>
</div>