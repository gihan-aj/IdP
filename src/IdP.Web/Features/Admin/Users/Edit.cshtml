@page "/admin/users/edit/{id}"
@model IdP.Web.Features.Admin.Users.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Edit User";
}

<div class="bg-white shadow rounded-lg p-6 max-w-2xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Edit User: @Model.Username</h2>
        <a href="/admin/users" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
            &larr; Back to List
        </a>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

        <!-- Email Section -->
        <div class="mb-6">
            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
            <input asp-for="Input.Email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
        </div>

        <!-- Role Management Section -->
        <div class="mb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Assign Roles</h3>
            <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
                <div class="grid grid-cols-2 gap-4">
                    @foreach (var role in Model.AllRoles)
                    {
                        <div class="flex items-center">
                            <!--
                                Logic: Checkbox binds to Input.SelectedRoles.
                                If the value matches the list, it's checked.
                            -->
                            <input type="checkbox" name="Input.SelectedRoles" value="@role"
                                   id="role_@role"
                                   class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                                   @(Model.Input.SelectedRoles.Contains(role) ? "checked" : "") />

                            <label for="role_@role" class="ml-2 block text-sm text-gray-900 select-none">
                                @role
                            </label>
                        </div>
                    }
                </div>
            </div>
            <p class="text-xs text-gray-500 mt-2">
                Changing roles will update the user's permissions. They may need to re-login for changes to take effect immediately in external apps.
            </p>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700 font-medium shadow-sm">
                Save Changes
            </button>
        </div>
    </form>
</div>
