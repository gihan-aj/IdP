@model IdP.Web.Features.Connect.ConsentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    ViewData["Title"] = "Consent Required";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Authorization Required
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    The application <span class="font-bold text-indigo-600">@(Model?.ApplicationName ?? "Unknown App")</span> is requesting access to your account.
                </p>
            </div>

            <div class="rounded-md bg-yellow-50 p-4">
                <div class="flex">
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-yellow-800">
                            Requested Permissions:
                        </h3>
                        <ul class="mt-2 list-disc list-inside text-sm text-yellow-700">
                            @if (Model?.Scopes != null)
                            {
                                @foreach (var scope in Model.Scopes)
                                {
                                    <li>@scope</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!--
                Post back to the ReturnUrl (which is /connect/authorize?client_id=...).
                This ensures we stay on the valid OpenIddict Endpoint.
            -->
            <form method="post" action="/connect/authorize" class="mt-8 space-y-4">
                @Html.AntiForgeryToken()

                @if (!string.IsNullOrEmpty(Model?.ReturnUrl))
                {
                    // Parse the query string from ReturnUrl and render as hidden inputs
                    // This creates <input type="hidden" name="client_id" value="..." /> etc.
                    foreach (var parameter in Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(new Uri("http://localhost" + Model.ReturnUrl).Query))
                    {
                        <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
                    }
                }

                <p class="text-sm text-gray-500">
                    Do you allow this application to access your data?
                </p>

                <div class="flex gap-4">
                    <!-- Name="consent_action" allows the controller to know which button was clicked -->
                    <button type="submit" name="consent_action" value="accept"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Allow
                    </button>

                    <button type="submit" name="consent_action" value="deny"
                            class="group relative w-full flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Deny
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
