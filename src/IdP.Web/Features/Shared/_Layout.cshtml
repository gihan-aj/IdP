<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdP Admin</title>
    <!-- Favicon: Shield Emoji -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🛡️</text></svg>">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    @{
        // Helper logic to check active route
        var currentPath = Context.Request.Path.Value?.ToLower() ?? "";

        string GetLinkClass(string linkPath)
        {
            // If we are on /admin/users/edit, /admin/users should still be active
            return currentPath.StartsWith(linkPath)
            ? "text-white font-bold"             // Active Style
            : "text-indigo-200 hover:text-white"; // Inactive Style
        }
    }

    <nav class="flex items-center justify-between flex-wrap bg-indigo-600 p-6 fixed w-full z-10 top-0">
        <div class="flex items-center flex-shrink-0 text-white mr-6">
            <span class="font-semibold text-xl tracking-tight">🛡️ Identity Provider</span>
        </div>
        <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
            <div class="text-sm lg:flex-grow">
                <!-- Link back to main Dashboard -->
                <a href="/" class="block mt-4 lg:inline-block lg:mt-0 mr-4 text-indigo-200 hover:text-white">
                    Dashboard
                </a>

                <!-- Admin Navigation -->
                <a href="/admin/users" class="block mt-4 lg:inline-block lg:mt-0 mr-4 @GetLinkClass("/admin/users")">
                    Users
                </a>

                <!-- Placeholders for future modules -->
                <a href="#" class="block mt-4 lg:inline-block lg:mt-0 mr-4 @GetLinkClass("/admin/roles")">
                    Roles
                </a>
                <a href="#" class="block mt-4 lg:inline-block lg:mt-0 @GetLinkClass("/admin/clients")">
                    Clients
                </a>
            </div>
            <div>
                <form action="/connect/logout" method="get">
                    <button type="submit" class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-indigo-500 hover:bg-white mt-4 lg:mt-0">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mx-auto mt-24 px-4">
        @RenderBody()
    </div>

</body>
</html>